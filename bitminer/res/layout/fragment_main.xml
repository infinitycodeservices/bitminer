<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context="MainActivity" >

    <Button
        android:id="@+id/play_now"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_above="@+id/settings_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/playnow"
        android:clickable="true"
        android:onClick="launchGame" />

    <Button
        android:id="@+id/store_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/leader_button"
        android:layout_alignBottom="@+id/leader_button"
        android:layout_alignParentRight="true"
        android:background="@drawable/store" />

    <Button
        android:id="@+id/leader_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/info_button"
        android:layout_alignBottom="@+id/info_button"
        android:layout_toLeftOf="@+id/store_button"
        android:background="@drawable/leader" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/info_button"
        android:layout_alignBottom="@+id/info_button"
        android:layout_alignParentLeft="true"
        android:background="@drawable/settings" />

    <Button
        android:id="@+id/info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp"
        android:layout_toRightOf="@+id/settings_button"
        android:background="@drawable/info" />

</RelativeLayout>